<% include ../partials/header %>

<div class='container'>
  <h2 class='form_heading'>Edit <%= campground.name %></h2>
  <div class='form_width'>
    <form action='/campgrounds/<%= campground._id %>?_method=PUT' method='POST'>
      <div class='form-group'>
          <input class='form-control' type='text' name='name' value='<%= campground.name %>'>
      </div>
      <div class='form-group'>
          <input class='form-control' type='text' name='image' value='<%= campground.image %>'>
      </div>
      <div class='form-group'>
          <textarea class='form-control' name='description'><%= campground.description %></textarea>
      </div>
      <div class='form-group'>
        <button class='btn btn-lg btn-primary btn-block'>Submit</button>
      </div>
    </form>
    <a class='link_to_page' href='/campgrounds'>Campgrounds</a>
  </div>
</div>

<% include ../partials/footer %>