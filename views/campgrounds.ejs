<% include partials/header %>

<div class='container'>
  <header class='jumbotron'>
      <h1>Welcome To YelpCamp</h1>
    <p>View our hand-picked campgrounds from all over the UK!</p>
    <p>
      <a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add New Campground</a>
    </p>
  </header>

  <div class='row campgrounds_container'>
    <% camps.forEach(camp => { %>
      <div class='col-md-4 col-sm-6'>
        <div class='img-thumbnail'>
          <img class='camp_image' src='<%= camp.image %>'>
          <div class='caption'>
            <h4><%= camp.name %></h4>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include partials/footer %>